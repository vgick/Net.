@model NBCH_ASP.Models.PDF.PDF.IndexModel
@{ViewData["Title"] = "Список анкет";}

<form asp-action="Index" method="post">
	<div class="row">
		<div class="input-group col-9 m-0 p-0">
			<input class="form-control"  type="text" asp-for="FIO" id="FFF">
			<div class="input-group-append">
				<button type="submit" class="form-control btn btn-info">Найти</button>
			</div>
		</div>
		<div class="col-3 m-0 p-0">

			<fieldset id="regionsList">
				<legend id="regionLegend" style="cursor:pointer">Регионы</legend>
				<div id="regions">

					@for (int i = 0; i < Model.Regions.Count; i++) {
						<div class="form-check form-check-inline">
							<input class="form-check-input" asp-for="@Model.Regions[i].ch" type="checkbox">
							<label class="form-check-label" asp-for="@Model.Regions[i].ch">@Model.Regions[i].Reg</label>
							<input class="form-control"     asp-for="@Model.Regions[i].Reg" type="hidden">
						</div>
					}
				</div>
			</fieldset>
			@await Html.PartialAsync("regionPartial")
		</div>
	</div>
</form>





