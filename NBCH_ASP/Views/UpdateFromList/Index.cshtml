@model string[]

<form method="post">
	<div class="row">
		<div class="col col-12">
			@for (int i = 0; i < Model.Length; i++) {
				<input class="form-text p-0 m-0 col-12" type="text" asp-for="@Model[i]">
			}

			<br />
			<button type="submit" class="btn btn-secondary">Пересчитать</button>
		</div>
	</div>
</form>