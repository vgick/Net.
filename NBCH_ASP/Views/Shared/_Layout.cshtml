@using NBCH_ASP.Controllers.NBCH
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container">
				@*<a class="navbar-brand" asp-controller="PDF" asp-action="Index">Список анкет</a>
					<a class="navbar-brand" asp-controller="ADUsers" asp-action="Index">Админка</a>*@
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
					<p class="nav navbar-text navbar-right">Произведен вход в систему под учетной записью @User.Identity.Name!</p>
					<ul class="navbar-nav flex-grow-1">
						@*<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
							</li>*@
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="@HelperASP.ControllerNameFromClass(typeof(NBCHRequestController))" asp-action="Index">Запросить анкету в НБКИ</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="@HelperASP.ControllerNameFromClass(typeof(SearchClientController))" asp-action="Index">Архив анкет НБКИ</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="@HelperASP.ControllerNameFromClass(typeof(RegistrarDocumentsController))" asp-action="Index">Архив документов</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container-fluid">
		<div class="row">
			<div class="col-12 mr-5 pr-5">
				<main role="main" class="pb-3">
					@RenderBody()
				</main>
			</div>
		</div>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; @DateTime.Now.Year - VLF
		</div>
	</footer>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@RenderSection("Scripts", required: false)
</body>
</html>
