@model AddressReq

<div class="card">
	<div class="card-header">
		<span class="h6">@Html.Raw(((AddressType)Int32.Parse(Model.AddressType)).GetDescription())</span>
	</div>
	<div class="card-body">
		<div class="input-group m-0 mt-1 p-0">
			<span class="input-group-text">Город</span>
			<input class="form-control" type="text" asp-for="@Model.City" />
		</div>
		<div class="input-group m-0 mt-1 p-0">
			<span class="input-group-text">Улица</span>
			<input class="form-control" type="text" asp-for="@Model.Street" />
		</div>
		<div class="input-group m-0 mt-1 p-0">
			<span class="input-group-text">Номер дома</span>
			<input class="form-control" type="text" asp-for="@Model.HouseNumber" />
		</div>
	</div>
</div>